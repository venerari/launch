
{
    "name":"booster-configmap-nodejs",
    "version":"1.0.0",
    "description":"This project demonstrates application and runtime configuration leveraging external configuration sources",
    "author":"Red Hat, Inc.",
    "license":"Apache-2.0",
    "scripts":{
        "test":"tape test/*.js | tap-spec",
        "lint":"eslint test/*.js app.js bin/*",
        "prepare":"echo 'To confirm CVE compliance, run \"npm run security-check\"' ",
        "security-check":"nsp check",
        "coverage":"nyc npm test",
        "coverage:html":"nyc npm test && nyc report --reporter=html",
        "coveralls":"nyc npm test && nyc report --reporter=text-lcov | coveralls",
        "ci":"npm run lint && npm run coveralls",
        "dependencyCheck":"szero . --ci",
        "release":"standard-version -a",
        "openshift":"nodeshift --strictSSL=false --nodeVersion=8.x",
        "postinstall":"license-reporter report && license-reporter save --xml licenses.xml",
        "start":"PORT=8080 node ./bin/www"
    },
    "standard-version":{
        "scripts":{
            "postbump":"npm run postinstall && node release.js",
            "precommit":"git add .openshiftio/application.yaml licenses/"
        }
    },
    "repository":{
        "type":"git",
        "url":"git://github.com/bucharest-gold/nodejs-configmap.git"
    },
    "files":[
        "package.json",
        "app.js",
        "public",
        "bin",
        "LICENSE",
        "licenses"
    ],
    "bugs":{
        "url":"https://github.com/bucharest-gold/nodejs-configmap/issues"
    },
    "homepage":"https://github.com/bucharest-gold/nodejs-configmap",
    "devDependencies":{
        "coveralls":"^3.0.0",
        "eslint":"~4.18.0",
        "eslint-config-semistandard":"~12.0.0",
        "eslint-config-standard":"~11.0.0",
        "eslint-plugin-import":"^2.7.0",
        "eslint-plugin-node":"^6.0.0",
        "eslint-plugin-promise":"~3.6.0",
        "eslint-plugin-react":"~7.7.0",
        "eslint-plugin-standard":"~3.0.1",
        "nodeshift":"^1.4.1",
        "nsp":"~3.2.1",
        "nyc":"~11.4.1",
        "proxyquire":"^2.0.0",
        "sinon":"^4.2.2",
        "standard-version":"^4.3.0",
        "supertest":"^3.0.0",
        "szero":"^1.0.0",
        "tap-spec":"~4.1.1",
        "tape":"~4.9.0"
    },
    "dependencies":{
        "body-parser":"^1.18.2",
        "debug":"^3.1.0",
        "express":"^4.16.0",
        "js-yaml":"^3.10.0",
        "kube-probe":"^0.3.1",
        "license-reporter":"^1.1.3",
        "openshift-rest-client":"^1.0.1",
        "winston":"^2.3.1"
    }
}